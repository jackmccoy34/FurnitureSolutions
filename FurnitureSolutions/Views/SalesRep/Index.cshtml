@model IEnumerable<FurnitureSolutions.Models.SalesRepListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Sales Reps</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RepId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Territory)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RepId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepName)
            </td>RepId
            <td>
                @Html.DisplayFor(modelItem => item.Territory)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RepId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RepId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RepId })
            </td>
        </tr>
    }

</table>
